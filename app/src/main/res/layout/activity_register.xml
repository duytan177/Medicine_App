<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Auth.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-72dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/top_login" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="SIGN UP"
                android:textAlignment="center"
                android:textColor="#2326F3"
                android:textSize="40sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="Status: "
                    android:textColor="#6C5DD2"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/checkbox_Mr"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Mr" />

                    <RadioButton
                        android:id="@+id/checkbox_Mrs"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Mrs" />

                    <RadioButton
                        android:id="@+id/checkbox_Dr"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Dr" />

                    <RadioButton
                        android:id="@+id/checkbox_Me"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Me" />
                </RadioGroup>
            </LinearLayout>

            <!-- First Name -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                >

                <TextView
                    android:id="@+id/txtFirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="First Name: "
                    android:layout_marginTop="6dp"
                    android:textSize="16sp"
                    android:textColor="#6C5DD2"
                    />

                <EditText
                    android:id="@+id/edtFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/background_edt"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Enter Your First Name"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="#707070"
                    android:textColorHint="#707070"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Last Name -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                >

                <TextView
                    android:id="@+id/txtLastName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Last Name: "
                    android:layout_marginTop="6dp"
                    android:textSize="16sp"
                    android:textColor="#6C5DD2"
                    />

                <EditText
                    android:id="@+id/edtLastName"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:background="@drawable/background_edt"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Enter Your Last Name"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textColor="#707070"
                    android:textSize="18sp"
                    android:textColorHint="#707070"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Email -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                >

                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Email-address: "
                    android:layout_marginTop="6dp"
                    android:textSize="16sp"
                    android:textColor="#6C5DD2"
                    />

                <EditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/background_edt"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:hint="Enter Your Email"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textColor="#707070"
                    android:textSize="16sp"
                    android:textColorHint="#707070"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Password -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                >

                <TextView
                    android:id="@+id/txtPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Password:"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="16sp"
                    android:textColor="#6C5DD2"
                    />

                <EditText
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/background_edt"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="******"
                    android:inputType="textEmailAddress"
                    android:textColor="#707070"
                    android:textColorHint="#707070"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Confirm Password -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                >

                <TextView
                    android:id="@+id/txtConfirmPassword"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Confirm password:"
                    android:textColor="#6C5DD2"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edtConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/background_edt"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:hint="******"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:textColor="#707070"
                    android:textSize="18sp"
                    android:textColorHint="#707070"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Date of Birth: -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:text="Date of Birth:"
                    android:textColor="#6C5DD2"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edtDate"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:background="@drawable/background_edt"
                    android:ems="10"
                    android:inputType="date"
                    android:hint="mm/dd/yyyy"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textColor="#707070"
                    android:textSize="18sp"
                    android:textColorHint="#707070"
                    android:layout_marginTop="8dp"/>

                <ImageButton
                    android:id="@+id/btnSelectDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/date" />

            </LinearLayout>

            <!-- Address 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                >

                <TextView
                    android:id="@+id/txtAddress1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Address 1:"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="11dp"
                    android:textSize="16sp"
                    android:textColor="#6C5DD2"
                    />

                <EditText
                    android:id="@+id/edtAddress1"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/background_edt"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint=""
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textColor="#707070"
                    android:textSize="18sp"
                    android:textColorHint="#707070"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Address 2 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                >

                <TextView
                    android:id="@+id/txtAddress2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Address 2:"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="6dp"
                    android:textSize="16sp"
                    android:textColor="#6C5DD2"
                    />

                <EditText
                    android:id="@+id/edtAddress2"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/background_edt"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint=""
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textColor="#707070"
                    android:textSize="18sp"
                    android:textColorHint="#707070"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Code Postal -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                >

                <TextView
                    android:id="@+id/txtCodePostal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Code Postal"
                    android:layout_marginTop="6dp"
                    android:textSize="16sp"
                    android:textColor="#6C5DD2"
                    />

                <EditText
                    android:id="@+id/edtCodePostal"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/background_edt"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint=""
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textColor="#707070"
                    android:textSize="18sp"
                    android:textColorHint="#707070"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- City -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                >

                <TextView
                    android:id="@+id/txtCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="City: "
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="52dp"
                    android:textSize="16sp"
                    android:textColor="#6C5DD2"
                    />

                <EditText
                    android:id="@+id/edtCity"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/background_edt"
                    android:ems="10"
                    android:gravity="center"
                    android:hint=""
                    android:inputType="textPersonName"
                    android:textColor="#707070"
                    android:textColorHint="#707070"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Siret -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                >

                <TextView
                    android:id="@+id/txtSiret"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Siret: "
                    android:layout_marginTop="6dp"
                    android:textSize="16sp"
                    android:layout_marginRight="47dp"

                    android:textColor="#6C5DD2"
                    />

                <EditText
                    android:id="@+id/edtSiret"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/background_edt"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint=""
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textColor="#707070"
                    android:textSize="18sp"
                    android:textColorHint="#707070"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Num VAT -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                >

                <TextView
                    android:id="@+id/txtNumVAT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Num VAT: "
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="15dp"
                    android:textSize="16sp"
                    android:textColor="#6C5DD2"
                    />

                <EditText
                    android:id="@+id/edtNumVAT"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/background_edt"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint=""
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textColor="#707070"
                    android:textSize="18sp"
                    android:textColorHint="#707070"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- IBAN:  -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                >

                <TextView
                    android:id="@+id/txtIBAN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="IBAN: "
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="46dp"
                    android:textSize="16sp"
                    android:textColor="#6C5DD2"
                    />

                <EditText
                    android:id="@+id/edtIBAN"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/background_edt"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint=""
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textColor="#707070"
                    android:textSize="18sp"
                    android:textColorHint="#707070"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- B.I.C SWIFT  -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                >

                <TextView
                    android:id="@+id/txtBIC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="B.I.C SWIFT: "
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="-1dp"
                    android:textSize="16sp"
                    android:textColor="#6C5DD2"
                    />

                <EditText
                    android:id="@+id/edtBIC"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/background_edt"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint=""
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textColor="#707070"
                    android:textSize="18sp"
                    android:textColorHint="#707070"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Sponsor Code  -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                >

                <TextView
                    android:id="@+id/txtSponsorCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sponsor Code: "
                    android:layout_marginRight="-17dp"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:textColor="#6C5DD2"
                    />

                <EditText
                    android:id="@+id/edtSponsorCode"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/background_edt"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint=""
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textColor="#707070"
                    android:textSize="18sp"
                    android:textColorHint="#707070"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Number SSRS  -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                >

                <TextView
                    android:id="@+id/txtSSRS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Number SSRS: "
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="-15dp"
                    android:textSize="16sp"
                    android:textColor="#6C5DD2"
                    />

                <EditText
                    android:id="@+id/edtSSRS"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/background_edt"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint=""
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textColor="#707070"
                    android:textSize="18sp"
                    android:textColorHint="#707070"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Default  -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                >

                <TextView
                    android:id="@+id/txtDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Default: "
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="34dp"
                    android:textSize="16sp"
                    android:textColor="#6C5DD2"
                    />

                <EditText
                    android:id="@+id/edtDefault"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/background_edt"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint=""
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textColor="#707070"
                    android:textSize="18sp"
                    android:textColorHint="#707070"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Provider category  -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                >

                <TextView
                    android:id="@+id/txtProviderCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Provider category: "
                    android:textSize="16sp"
                    android:textColor="#6C5DD2"
                    />

                <EditText
                    android:id="@+id/edtProviderCategory"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/background_edt"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint=""
                    android:gravity="center"
                    android:textColor="#707070"
                    android:layout_marginRight="10dp"
                    android:textSize="18sp"
                    android:textColorHint="#707070"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Dissertation Currency  -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                >

                <TextView
                    android:id="@+id/txtDissertationCurrency"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Dissertation Currency: "
                    android:textSize="16sp"
                    android:textColor="#6C5DD2"
                    />

                <EditText
                    android:id="@+id/edtDissertationCurrency"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/background_edt"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint=""
                    android:gravity="center"
                    android:textColor="#707070"
                    android:textSize="18sp"
                    android:textColorHint="#707070"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="You have an account?" />

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="5"
                    android:text="Sign In" />
            </LinearLayout>


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnCreate"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/registerbtn_background"
                    android:text="Create Account"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>